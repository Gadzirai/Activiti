<?xml version="1.0" encoding="UTF-8"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="2.0"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

    <portlet>
        <portlet-name>ActivitiTasksPortlet</portlet-name>
        <display-name>Activiti Tasks</display-name>
        <portlet-class>org.activiti.portlets.explorer.portlet.ActivitiApplicationPortlet</portlet-class>

        <init-param>
            <name>application</name>
            <value>org.activiti.portlets.explorer.application.ActivitiTasksPortletApplication</value>
        </init-param>
        <init-param>
            <name>widgetset</name>
            <value>com.vaadin.portal.gwt.PortalDefaultWidgetSet</value>
        </init-param>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>
        <portlet-info>
            <title>Activiti Tasks</title>
            <short-title>Tasks</short-title>
        </portlet-info>
    </portlet>

    <portlet>
        <portlet-name>ActivitiAdminPortlet</portlet-name>
        <display-name>Activiti Admin</display-name>
        <portlet-class>org.activiti.portlets.explorer.portlet.ActivitiApplicationPortlet</portlet-class>

        <init-param>
            <name>application</name>
            <value>org.activiti.portlets.explorer.application.ActivitiAdminPortletApplication</value>
        </init-param>
        <init-param>
            <name>widgetset</name>
            <value>com.vaadin.portal.gwt.PortalDefaultWidgetSet</value>
        </init-param>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>
        <portlet-info>
            <title>Activiti Admin</title>
            <short-title>Admin</short-title>
        </portlet-info>
    </portlet>
</portlet-app>
